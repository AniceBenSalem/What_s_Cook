<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1691dp"
            android:weightSum="1"
            android:background="#ffffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Les recettes du moment"
                android:id="@+id/day_recette"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.05"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:textSize="30dp"
                android:paddingStart="@dimen/big_text_size"
                android:background="#fff09100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.33"
                android:background="#ff81ff65" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="New Text"
                android:id="@+id/textView2"
                android:layout_weight="0.33"
                android:layout_gravity="center_horizontal"
                android:background="#ffff8711" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.16"
                android:background="#ff8ddcff" />

            <TextView
                android:layout_width="86dp"
                android:layout_height="0dp"
                android:text="New Text"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.05"></LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>


